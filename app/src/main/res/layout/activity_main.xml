<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f1wallpaper"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="¿Que sección quieres actualizar?"
        android:textColor="#FAF9F9"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonPilotos"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/casco"
        android:text="Pilotos"
        app:layout_constraintStart_toStartOf="@+id/buttonEquipos"
        app:layout_constraintTop_toBottomOf="@+id/buttonEquipos" />

    <ImageButton
        android:id="@+id/buttonEquipos"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/equipo"
        app:layout_constraintStart_toStartOf="@+id/buttonCircuitos"
        app:layout_constraintTop_toBottomOf="@+id/buttonCircuitos" />

    <ImageButton
        android:id="@+id/buttonCircuitos"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/monaco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>